<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primary"
    android:layout_marginTop="15dp">




        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:background="@drawable/background_input"
            android:backgroundTint="@color/all_black"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvDataCima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 de Fevereiro"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">

                </TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_linear_scale_24"
                    android:layout_marginStart="200dp">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvTituloTarefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Título tarefa"
                android:textStyle="bold"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/tvDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Descrição da Tarefa"
                android:textStyle="normal"
                android:textSize="10dp">

            </TextView>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:backgroundTint="@color/pink_round_add"
                android:background="@drawable/background_input"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="16:00"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp">

                </TextView>

            </LinearLayout>



        </LinearLayout>


</androidx.cardview.widget.CardView>